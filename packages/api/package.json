    "@rizrmdhn/validators": "workspace:*",
    "@trpc/server": "catalog:",
    "superjson": "^2.2.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@rizrmdhn/eslint-config": "workspace:*",
    "@rizrmdhn/prettier-config": "workspace:*",
    "@rizrmdhn/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "dotenv-cli": "^8.0.0",
